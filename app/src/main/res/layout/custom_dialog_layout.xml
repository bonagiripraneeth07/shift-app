<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical"
    android:background="#373737"
    android:id="@+id/customlayout"
    android:layout_height="300dp">


    <TextView
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:id="@+id/txtview"
        android:textSize="30sp"
        android:gravity="center"
     android:textColor="#fff"
        android:text="Contact /Book Now"/>


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/bookedsuccess"
android:visibility="gone"
        android:layout_width="400dp"
        android:layout_height="300dp"
        app:lottie_autoPlay="true"
        app:lottie_rawRes="@raw/bookedsuccess"/>
    <LinearLayout
        android:layout_width="384dp"
        android:layout_height="109dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/call_dialog"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:src="@drawable/call_dialog"/>

         <ImageView
             android:id="@+id/message_dialog"
             android:layout_marginRight="-15dp"
             android:layout_marginLeft="-10dp"
             android:layout_width="150dp"
             android:layout_height="50dp"
             android:src="@drawable/message_dialog"/>
        <ImageView
            android:visibility="visible"
            android:id="@+id/booknow_dialog"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:src="@drawable/booknow_dialog"/>


    </LinearLayout>

</LinearLayout>